# Environment Configuration

# OpenRouter API Configuration
# Get your API key from https://openrouter.ai/
VITE_OPENROUTER_API_KEY=your_openrouter_api_key_here

# WebSocket Configuration
# For development, use ws://localhost:3001
# For production, use your deployed WebSocket server URL
VITE_WS_URL=ws://localhost:3001

# Application Configuration
VITE_APP_NAME="Driver AI Platform"
VITE_APP_VERSION="1.0.0"

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_BETA_FEATURES=false

# Firebase Configuration (Optional - for enhanced features)
# VITE_FIREBASE_API_KEY=your_firebase_api_key
# VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your_project_id
# VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
# VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Development Settings
VITE_DEV_MOCK_WEBSOCKET=false
VITE_DEV_VERBOSE_LOGGING=true